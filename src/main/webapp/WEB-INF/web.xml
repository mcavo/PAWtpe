<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
      <servlet-name>sprintSpring</servlet-name>
      <servlet-class>
         org.springframework.web.servlet.DispatcherServlet
      </servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>sprintSpring</servlet-name>
      <url-pattern>/bin/*</url-pattern>
   </servlet-mapping>
	
	<servlet>
		<description>
		</description>
		<display-name>Error</display-name>
		<servlet-name>Error</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.Error</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Error</servlet-name>
		<url-pattern>/Error</url-pattern>
	</servlet-mapping>
	<servlet>
       <servlet-name>ShowOrders</servlet-name>
       <servlet-class>ar.edu.itba.it.paw.servlets.ShowOrders</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowOrders</servlet-name>
		<url-pattern>/managers/showOrders</url-pattern>
	</servlet-mapping>
	<servlet>
       <servlet-name>AddDish</servlet-name>
       <servlet-class>ar.edu.itba.it.paw.servlets.AddDish</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>AddManager</display-name>
		<servlet-name>AddManager</servlet-name>
		<servlet-class>ar.edu.itba.it.paw.servlets.AddManager</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddDish</servlet-name>
		<url-pattern>/managers/addDish</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddManager</servlet-name>
		<url-pattern>/admin/addManager</url-pattern>
	</servlet-mapping>
	
	
	<filter>
		<filter-name>UserFilter</filter-name> 
		<filter-class>ar.edu.itba.it.paw.web.UserFilter</filter-class>
	</filter> 
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>ManagerFilter</filter-name> 
		<filter-class>ar.edu.itba.it.paw.web.ManagerFilter</filter-class>
	</filter> 
	<filter-mapping>
		<filter-name>ManagerFilter</filter-name>
		<url-pattern>/managers/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>AdminFilter</filter-name> 
		<filter-class>ar.edu.itba.it.paw.web.AdminFilter</filter-class>
	</filter> 
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	
  <display-name>Archetype Created Web Application</display-name>
</web-app>
